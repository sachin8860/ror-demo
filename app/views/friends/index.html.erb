<%# <p id="notice"><%= notice %>

<h1>Friends</h1>

<table class="table table-striped table-borderd table-hover">
  <thead class="table-light">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.First_Name + ' ' + friend.Last_Name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.Phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class: "btn btn-secondary" %>
